@page
@model EatYourFeats.Pages.ManageToDoModel
@{
    ViewData["Title"] = "Manage To-Do List";
}

<h2>Manage To-Do List</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<form method="post" asp-page-handler="MarkCompleted">
    <div class="form-group">
        <label>Tasks</label>
        <div>
            @foreach (var task in Model.Tasks)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="SelectedTaskIds" value="@task.Id" />
                    <label class="form-check-label">@task.Name (@task.Points points)</label>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Mark task(s) as completed</button>
</form>

@if (Model.CurrentGame.Score > 0)
{
    <div class="alert alert-success">
        <p>You have earned @Model.CurrentGame.Score points!</p>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
