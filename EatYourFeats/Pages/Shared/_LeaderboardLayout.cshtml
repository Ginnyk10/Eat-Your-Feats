@* _LeaderboardLayout.cshtml *@
<!DOCTYPE html>
<html>
<head>
    <style>
        /* Background */
        body {
            background-color: #413ceb; /* Cartoonish-sky blue */
            font-family: 'Press Start 2P', cursive; /* Retro game/pixellated font */
        }

        /* Background Image */
        .background-top {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 400px; /* Adjust height as needed */
            background: url('/Images/clouds.png') repeat-x top;
            background-size: contain; /* Ensure the image is fully displayed */
            opacity: 75%;
            z-index: -1; /* Ensure it stays behind other elements */
        }
        /* Background Image Bottom */
        .background-bottom {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 600px; /* Adjust height as needed */
            background: url('/images/grass.png') repeat-x bottom;
            z-index: -1; /* Ensure it stays behind other elements */
        }
        /* Buttons */
        button {
            background-color: #e16d63; /* Coral/orange color */
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            box-shadow: 0 0 0 4px #e16d63, 0 0 0 8px #e16d63; /* Pixellated/8-bit edge */
            font-family: 'Press Start 2P', cursive; /* Retro game/pixellated font */
        }

        /* To-Do List */
        #user-list {
            display: table;
            margin: 0 auto;
            border-collapse: collapse;
            width: 50%;
        }

            #user-list th, #user-list td {
                border: none; /* No outline */
                padding: 10px;
                text-align: left;
                color: white; /* White text */
                text-shadow: 2px 2px #e16d63; /* Coral/orange shadow */
            }

            #user-list img {
                vertical-align: middle;
                width: 10%;
                height: auto;
            }

            #user-list th {
                background-color: #e16d63;
                color: white;
                text-shadow: 2px 2px #e16d63; /* Coral/orange shadow */
            }

        /* Page Title */
        h1 {
            color: white;
            text-shadow: 2px 2px #e16d63; /* Coral/orange shadow */
            text-align: center;
            margin-top: 20px;
        }

        /* Return to Menu Button */
        #return-home {
            position: absolute;
            bottom: 10px;
            left: 10px;
        }

    </style>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="background-bottom"></div>
    <div class="background-top"></div>

    <div class="container">
        <form method="post">
            @RenderBody()
        </form>
    </div>

    <a id="return-home" href="/Dashboard">
        <button type="button">Return to Menu</button>
    </a>

    @RenderSection("Scripts", required: false)
</body>
</html>